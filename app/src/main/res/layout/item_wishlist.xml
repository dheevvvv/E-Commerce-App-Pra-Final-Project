<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="50dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_img_product"
            android:layout_width="170dp"
            android:src="@drawable/logo_foreground"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvNamaProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_img_product"
            android:layout_marginStart="20dp"
            android:text="@string/nama_product"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tvCategoryItemCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvNamaProduct"
            app:layout_constraintStart_toEndOf="@+id/iv_img_product"
            android:layout_marginStart="20dp"
            android:text="@string/category"
            android:textSize="14sp"
            />


        <TextView
            android:id="@+id/tvHargaCartproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoryItemCart"
            app:layout_constraintStart_toEndOf="@+id/iv_img_product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:text="Rp. 100.000"
            />

        <Button
            android:id="@+id/btnPesanWishlist"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvHargaCartproduk"
            app:layout_constraintStart_toEndOf="@+id/iv_img_product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/pesan"
            />

        <ImageView
            android:id="@+id/ivFavourite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_favourite_true"
            app:layout_constraintStart_toEndOf="@+id/btnPesanWishlist"
            app:layout_constraintTop_toBottomOf="@+id/tvHargaCartproduk"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>